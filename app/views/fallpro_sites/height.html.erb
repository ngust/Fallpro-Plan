
<div class="container">
      <div class="onsite-header-wrapper">
       
        <span class="onsite-header onsite-small">Specifically where are you working?</span>
      </div>
      <%= form_for [:fallpro, @site] do |f| %>


          <div class="form-group onsite-forms">
            <div  id="user-fields">
                  How high?
             
                <div>
                  <%= f.label :height, "Project Name" %><br>
                  <%= f.text_field :height, class: 'form-control exam_forms' %>
                </div>

      

<div style="height:50px"></div>

            <div>
              <%= f.submit "Next Step", class: 'btn btn-success btn-lg btn-block ipad-button ' %> 
            </div>
        </div>
      <% end %>

</div>


  <script>
  $( function() {
    $('#yes-cons').click(function() {
      test = $(this)
      console.log(test)
      test.addClass('super-button-clicked')
      $('#no-cons').removeClass('super-button-clicked')
      $('#site-yes-form').show()
      $('#site-no-form').hide()
      });

    $('#no-cons').click(function() {
      test = $(this)
      console.log(test)
      test.addClass('super-button-clicked')
      $('#yes-cons').removeClass('super-button-clicked')
      $('#site-yes-form').hide()
      $('#site-no-form').show()
      });
  });
</script>
