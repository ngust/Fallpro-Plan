  $( function() {
    $('#yes-can-drop').click(function() {
      test = $(this)
      console.log(test)
      test.addClass('super-button-clicked')
      $('#no-can-drop').removeClass('super-button-clicked')
      $('#slope-type').show()
      $('#fallpro_hazard_can_drop').val(true)
      });

    $('#no-can-drop').click(function() {
