
<div class="container">
      <div class="onsite-header-wrapper">
                <span class="onsite-header">Fall Pro Plan</span></br>
        <span class="onsite-header onsite-small">User Details</span>
      </div>
      <%= form_for [:fallpro, @user] do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

          <div class="form-group onsite-forms">
            <div  id="user-fields">
                   <div>
			        <%= f.label :firstname, "First Name" %><br>
			        <%= f.text_field :firstname, class: 'form-control exam_forms' %>
			      </div>
			      <div>
			        <%= f.label :lastname, "Last Name" %><br>
			        <%= f.text_field :lastname, class: 'form-control exam_forms' %>
			      </div>
			      <div>
			        <%= f.label :phone, "Phone Number" %><br>
			        <%= f.text_field :phone, class: 'form-control exam_forms' %>
			      </div>

					<%= f.hidden_field :user_id, value: current_user.id  %>

<div style="height:50px"></div>

            <div>
              <%= f.submit "Next Step", class: 'btn btn-success btn-lg btn-block ipad-button ' %> 
            </div>
        </div>
      <% end %>

</div>


